{
  "compilerOptions": {
    "target": "esnext",
    "module": "CommonJS",
    "noImplicitAny": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*", "*"]
    }
  },
  "include": ["**/*.ts"],
  "ts-node": {
    "esm": true
  }
}
